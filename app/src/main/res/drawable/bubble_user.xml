<?xml version="1.0" encoding="utf-8"?>
<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- 모서리를 둥글게 -->
    <corners android:radius="16dp"/>

    <!-- 배경 색상 (예: 연한 파란색) -->
    <solid android:color="#CCDDFF"/>

    <!-- 패딩/스톡 등 다양하게 가능 -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp"/>
</shape>
